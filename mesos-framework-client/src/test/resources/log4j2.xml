<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
        </Console>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="Console" />
        </Root>

        <Logger name="integratedtoolkit.Conn.Connectors.MesosFramework" additivity="FALSE" level="debug">
          <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="integratedtoolkit.Conn.Connectors.MesosFramework.Scheduler" additivity="FALSE" level="debug">
          <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="integratedtoolkit.Conn.Connectors.MesosFramework.Offer" additivity="FALSE" level="debug">
          <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="integratedtoolkit.Conn.Connectors.MesosFramework.Task" additivity="FALSE" level="debug">
          <AppenderRef ref="Console"/>
        </Logger>
    </Loggers>
</Configuration>
